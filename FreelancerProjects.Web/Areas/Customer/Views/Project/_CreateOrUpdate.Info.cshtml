@model FreelancerProjects.Models.ViewModels.ProjectModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PlatformId" class="control-label"></label>
            <select asp-for="PlatformId" class="form-control" asp-items="ViewBag.Platforms">
                <option value="">---Select Platform---</option>
            </select>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        @{
            if (Model != null)
            {
                <div class="form-group">
                    <label asp-for="CreateDateTime" class="control-label"></label>
                    <input asp-for="CreateDateTime" class="form-control" />
                    <span asp-validation-for="CreateDateTime" class="text-danger"></span>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
